 	<select id="login_check" resultType="String">
		  select name
		  from user
		  where id=#{id} and password=#{password}
 	</select>
 
    <select id="select" resultType="member">
        select * from user where id = #{id}
    </select>
 
 	<select id="selectAll" resultType="member">
        select * from user
    </select>
 
    <insert id="insert">
    	insert into user values(#{id},#{password},#{name},#{email},#{age})
    </insert>
    

    <update id="update">
		update user set 
		name=#{name}, password=#{password}, 
		email=#{email}, age=#{age} where id = #{id}
    </update>

    <delete id="delete">
		delete from user where id=#{id}
    </delete>


